{% set faction_id = (app.session.get('inscription') is not null and app.session.get('inscription').has('ally'))
	? app.session.get('inscription').get('ally')
	: current_player_faction_id is defined ? current_player_faction_id : 0
%}

<!DOCTYPE html>
<html lang="fr">
	<head>
		<title>
			{%- block title -%}
				Kalaxia
			{%- endblock title -%}
		</title>

		<meta charset="utf-8" />
		<meta name="description" content="Kalaxia, jeu de stratÃ©gie multijoueurs" />
		<meta name="viewport" content="width=device-width, initial-scale=1">

		<link rel="icon" type="image/png" href="{{ asset('build/media/favicon/color' ~ faction_id ~ '.png') }}" />
		<link rel="stylesheet" media="screen" type="text/css" href="{{ asset('build/css/main.faction' ~ (faction_id != 0 ? faction_id : 1) ~ '.css') }}" />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Titillium+Web:wght@300;400;600;700&display=swap" rel="stylesheet">
	</head>
	<body class="color{{ faction_id }} no-scrolling {% if app.request.get('_route') == 'create_character' %}inscription{% endif %}" data-init-sftr="2">
		{% block body %}{% endblock body %}

		<script type="text/javascript" src="{{ asset('build/js/jquery1.8.2.min.js') }}"></script>

		<script type="text/javascript">
			jQuery(document).ready(function($) {
				game = {
					path: '{{ get_api_endpoint() }}/',
					shipsName: [{{ get_ship_names()|join(',')|raw }}],
					shipsPev: [{{ get_ship_pevs()|join(',') }}]
				};
			});
			</script>
		<script type="text/javascript" src="{{ asset('build/js/main.js') }}"></script>
		<script type="text/javascript" src="{{ asset('build/js/main.desktop.js') }}"></script>
		<script type="text/javascript" src="{{ asset('build/js/autocomplete.module.js') }}"></script>
	</body>
</html>
