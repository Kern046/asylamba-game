<div class="w-32 bg-gray-800 py-1 px-2 rounded-md border border-gray-700 data-[empty]:bg-gray-900 data-[empty]:border-gray-800 mt-1 select-none cursor-pointer data-[empty]:cursor-default"
	 {% if quantity == 0 %}data-empty{% endif %}
	data-side="{{ side }}"
	data-fleet--ship-transfer-target="{{ side }}"
	 data-action="click->fleet--ship-transfer#transfer"
	data-ship-id="{{ identifier }}">
	<!--				<img src="{{ asset('build/media/ship/picto/' ~ get_ship_info(identifier, 'thumbnail') ~ '.png') }}" alt="" />-->
	<div class="flex flex-col">
		<span class="text-large font-semibold quantity">{{ quantity }}</span>
		<span class="text-xs">{{ get_ship_info(identifier, 'codeName') }}</span>
	</div>
</div>
